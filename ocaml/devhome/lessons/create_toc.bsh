#!/bin/bash
set -e
echo >Readme.md
echo >index
num=1
writelink() {
	title=`head -n 1 $1/Readme.md | sed 's/^#*\s*//'`
	echo "* [Lesson $num: $title]($1)" >>Readme.md
	echo "$num $1 $title" >>index
	num=$(($num + 1))
}

x=$(<start)
while [ -e $x/next ] ; do
	writelink "$x"
	x=$(<$x/next)
done
writelink $x
cat Readme.md
